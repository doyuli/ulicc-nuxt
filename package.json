{
  "name": "ulicc-nuxt",
  "type": "module",
  "private": true,
  "description": "My Blog Theme with Nuxt Content.",
  "author": "doyuli",
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",

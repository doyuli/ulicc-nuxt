    "@nuxtjs/color-mode": "^4.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^25.0.6",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.1.0",
    "lint-staged": "^16.2.7",
    "picocolors": "^1.1.1",
    "sharp": "^0.34.5",
    "simple-git": "^3.30.0",
    "simple-git-hooks": "^2.13.1",
    "sitemap": "^9.0.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node --experimental-strip-types scripts/verify-commit.ts"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "eslint --cache --fix"
    ]
  }
}

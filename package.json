    "@neondatabase/serverless": "^1.0.2",
    "@nuxt/content": "^3.9.0",
    "@nuxt/image": "2.0.0",
    "ai": "^6.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lru-cache": "^11.2.5",
    "lucide-vue-next": "^0.557.0",
    "medium-zoom": "^1.1.0",
    "nuxt": "^4.2.1",
    "nuxt-auth-utils": "0.5.26",
    "pg": "^8.17.1",
    "reka-ui": "^2.6.1",
    "shadcn-nuxt": "2.4.2",
    "shiki-stream": "^0.1.4",
    "tailwind-merge": "^3.4.0",
